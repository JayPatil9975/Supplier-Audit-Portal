<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Remarks</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-10">
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Add Remarks for Audit ID: <%= audit._id %></h1>

    <form action="/admin/audit/<%= audit._id %>/remarks" method="POST">
        <div class="mb-4">
          <label class="block text-gray-700 font-medium mb-2">New Remark</label>
          <textarea name="newRemark" rows="4" class="w-full border border-gray-300 rounded p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
      
        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
          Add Remark
        </button>
        <a href="/admin/dashboard" class="ml-4 text-blue-600 hover:underline">Back to Dashboard</a>
      </form>
      
      <% if (audit.adminRemarks && audit.adminRemarks.length > 0) { %>
        <div class="mt-8">
          <h2 class="text-lg font-semibold text-gray-800 mb-2">Previous Remarks</h2>
          <ul class="space-y-2">
            <% audit.adminRemarks.slice().reverse().forEach(r => { %>
              <li class="bg-gray-50 border p-3 rounded shadow-sm">
                <p class="text-gray-700 mb-1"><%= r.text %></p>
                <p class="text-sm text-gray-500"><%= new Date(r.createdAt).toLocaleString() %></p>
              </li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      
  </div>
</body>
</html>
